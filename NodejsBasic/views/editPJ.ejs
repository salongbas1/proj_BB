<%- include("partials/header") %>

<style>
    .column-1 {
        float: left;
        width: 35%;
        padding: 20px;
        background-color: #aaa;
        margin-top: 110px;        
    }
    
    .column-2 {
        float: left;
        width: 65%;
        padding: 20px;
    }
   .bg{
    background-color: #dae1e7;
    font-family: 'Kanit', sans-serif;  
   }
   h2{
    font-family: 'Kanit', sans-serif;  
   }
   h3{
    font-family: 'Poppins', sans-serif;
   }
   .btn{
    font-family: 'Poppins', sans-serif;
   }
</style>
<div class="bg">
<br><br><br>

    <div class="row">
        <div class="container">
            <div class="column-1">
                <div class="col-lg-3 col-lg-8 col-lg-12">
                    <h3 class="my-4" style="text-align: center;">Admin:BB</h3>
                    <div class="list-group">
                        <a href="/admin/Projects/add" class="btn btn-primary">add</a>
                    </div>
                </div>
            </div>
            <div class="column-2">  
                <div class="col-lg-3 col-lg-8 col-lg-12">
                <h2 style="text-align: center;" class="my-4" >แบบฟอร์มแก้ไขข้อมูล</h2>
                <% Projects.forEach(function(project){ %>
                <form action="/admin/Projects/edit" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="">อาชีพ</label>
                        <input type="text" name="name" id="" value="<%= project.name %>" class="form-control">
                    </div>
                    <input type="hidden" name="id" value="<%= project._id %>">
                    <div class="form-group">
                        <label for="">รายละเอียด</label>
                        <textarea  name="desc"  class="form-control"><%= project.desc %></textarea>
                    </div>
                    <div class="form-group">
                        <label for="">วันลงข้อมูล</label>
                        <input type="date" name="date" id="" value="<%= project.date %>" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="">รูปภาพ</label>
                        <input type="file" name="image" id="" class="form-control">
                    </div>
                   
                     <input type="submit" name="" value="Update" class="btn btn-success">
                </form>  
                <% }) %>  
                </div>
            </div>
        </div>
    </div>
    <br><br><br><br><br><br>
</div>

<%-  include("partials/footer") %>