<%- include("partials/header") %>
<br><br><br><br>

        
        <style>
           
            
            
            .column1 {
              float: left;
              width: 20%;
             
              height: 300px; 
            }
            
            .column2 {
              float: left;
              width: 80%;
              padding: 10px;
              height: 300px; 
            }
            
            
            .row:after {
              content: "";
              display: table;
              clear: both;
            }
            </style>
            </head>
            <body>
         <div class="container">
            <div class="row">
              <div class="column1">
                <%- include profp %>
              </div>
              <div class="column2" >
                <form action="/social/post" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="">อาชีพ</label>
                        <input type="text" name="name" id="" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="">รายละเอียด</label>
                        <textarea  name="desc"  class="form-control"></textarea>
                    </div>
                    <% if(user){ %>
                    <input type="hidden" name="user_id" value="<%=user._id%>">
                   <input type="hidden"  type="file" name="user_image" value="<%=user.image%>">
                    <% } %>
                    <div class="form-group">
                        <label for="">รูปภาพ</label>
                        <input type="file" name="image" id="" >
                    </div>
                   
                     <input type="submit" name="" value="โพส" class="btn btn-success">
                </form>  
                
                <% post.forEach(function(posts){ %>
                <div>
                    
                    <h2><img src="/images/<%= posts.user_image %>" alt="Avatar" class="avatar" ><%= posts.name %></h2>
                </div>
                <% }) %>
              </div>
            </div>
         </div>
            
            </body>
            </html>
                 