<%- include("partials/header") %>

<style>
    .column-1 {
        float: left;
        width: 35%;
        padding: 20px;
        background-color: #aaa;
        margin-top: 110px;
        
        
    }
    
    .column-2 {
        float: left;
        width: 65%;
        padding: 20px;
    }
    .bg{
        background-color: #dae1e7;
    }
  
</style>
<div class="bg">
    <br><br><br>
    <div class="row">
        <div class="container">
            <div class="column-1">
                <div class="col-lg-3 col-lg-8 col-lg-12">
                    <h3 class="my-4" style="text-align: center;">Admin:BB</h3>
                    <div class="list-group">
                        <a href="/products/add" class="btn btn-primary">add</a>
                    </div>
                </div>
            </div>
            <div class="column-2">  
                <div class="col-lg-3 col-lg-8 col-lg-12">
                <h2 style="text-align: center;" class="my-4">แบบฟอร์มแก้ไขสินค้า</h2>
                <% products.forEach(function(product){ %>
                <form action="/admin/Projects/products/edit" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="">ชื่อสินค้า</label>
                        <input type="text" name="name" id="" value="<%= product.name %>" class="form-control">
                    </div>
                    <input type="hidden" name="id" value="<%= product._id %>">
                    <div class="form-group">
                        <label for="">ราคา</label>
                        <input type="number" name="price" min=1 class="form-control" id="" value="<%= product.price %>">
                    </div>
                    <div class="form-group">
                        <label for="">รายละเอียด</label>
                        <textarea name="desc" id="" cols="80" rows="4" class="form-control"><%= product.desc %></textarea>
                    </div>
                    <div class="form-group">
                        <label for="">รูปภาพ</label>
                        <input type="file" name="image" id="" class="form-control">
                    </div>
                   
                     <input type="submit" name="" value="อัพเดท" class="btn btn-success">
                </form>  
                <% }) %>  
                </div>
            </div>
        </div>
    </div>
    <br><br><br>
</div>

<style>
    .column-2{
        font-family: 'Kanit', sans-serif;
    }
    h3{
        font-family: 'Poppins', sans-serif;
    }
    h2{
        font-family: 'Kanit', sans-serif;
    }
</style>

<%-  include("partials/footer") %>