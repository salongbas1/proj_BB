<%- include("partials/header") %>
<br><br><br><br>
    <div class="container">
        <div class="row my-4">
        
        <div class="col-lg-12 my-4">
            <h2 style="text-align: center;">แบบฟอร์มบันทึกสินค้า</h2><br>
            <% if(locals.errors) { %>
                <ul class="alert alert-primary" role="alert">
                    <% Object.values(errors).forEach(function(error){ %>
                       <li><%= error.msg %></li> 
                    <% }) %>
                </ul>

            <% } %>
            <form action="/products/add" method="POST"  enctype="multipart/form-data">
                <div class="form-group">
                    <label for="">ชื่อสินค้า</label>
                    <input type="text" name="name" class="form-control" id="">
                </div>
                <div class="form-group">
                    <label for="">รายละเอียดสินค้า</label>
                    <textarea name="desc" id="" cols="80" rows="4" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label for="">ราคา</label>
                    <input type="number" name="price" min=1 class="form-control" id="">
                </div>
                <div class="form-group">
                    <label for="">หมวดหมู่</label>
                    <select class="form-control" name="catagory" id="">
                        <% catagorys.forEach(function(catagory){ %>

                            <option value="<%=catagory.name%>"><%=catagory.name%></option>
                    
                          <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="">ภาพสินค้า</label>
                    <input type="file" name="image" id="" class="form-control">
                </div>
                <input type="submit" name="" id="" class="btn btn-success" value="บันทึกข้อมูล">
            </form>
        </div>
      </div>
    </div>
 
    
<%- include("partials/footer") %>