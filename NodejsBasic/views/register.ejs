<%- include("partials/header") %>
<title>Register</title>
<h1></h1><br><br><br>
<h1 style="text-align: center;">Register</h1>
<% if(locals.errors) { %>
    <div class="container"  style="width: 35%;margin: 25px auto;">
    <ul class="alert alert-danger" >
    <% Object.values(errors).forEach(function(error){ %>
        <li>
            <%= error.msg %>
        </li>
    <% }) %>
    </ul>
    </div>
<% } %>


<div class="container"  style="width: 35%;margin: 25px auto;">
    <form class="form-group" action="/users/register" method="post"  enctype="multipart/form-data">
        <div class="form-group">
            <label for="">Username:</label>
            <input type="text" name="name" value="" class="form-control">
        </div>
        <div class="form-group">
            <label for="">Email:</label>
            <input type="email" name="email" value="" class="form-control">
        </div>
        <div class="form-group">
            <label for="">Password:</label>
            <input type="password" name="password" value="" class="form-control">
        </div>
        <div class="form-group">
            <label for="">Location:</label>
            <input type="location" name="location" value="" class="form-control">
        </div>
        <div class="form-group">
            <label for="">Phone number:</label>
            <input type="callnumber" name="callnumber" value="" class="form-control">
        </div>
        <div class="form-group">
            <label for="">รูปภาพ</label>
            <input type="file" name="image" id="" class="form-control">
        </div>
        <input type="submit" name="" value="Register" class="btn btn-primary" style="float: right;" >
    </form>
</div>
<%-  include("partials/footer") %>