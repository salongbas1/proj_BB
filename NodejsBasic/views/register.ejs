<%- include("partials/header") %>
<title>Register</title>
<h1></h1><br><br><br><br>

<% if(locals.errors) { %>
    <div class="container"  style="width: 35%;margin: 25px auto;">
    <ul class="alert alert-danger" >
    <% Object.values(errors).forEach(function(error){ %>
        <li>
            <%= error.msg %>
        </li>
    <% }) %>
    </ul>
    </div>
<% } %>

<div class="bg">
<div class="container"  style="width: 35%;margin: -17px auto;">
    <h1 style="text-align: center;">Sign up</h1>
    <form class="form-group" action="/users/register" method="post"  enctype="multipart/form-data">
        <div class="form-group">
            
            <input type="text" name="name" value="" class="form-control" placeholder="ชื่อผู้ใช้งาน">
        </div>
        <div class="form-group">         
            <input type="email" name="email" value="" class="form-control" placeholder="อีเมล">
        </div>
        <div class="form-group">           
            <input type="password" name="password" value="" class="form-control" placeholder="รหัสผ่าน">
        </div>
        <div class="form-group">           
            <input type="location" name="location" value="" class="form-control" placeholder="ที่อยู่ผู้ใช้งาน">
        </div>
        <div class="form-group">            
            <input type="callnumber" name="callnumber" value="" class="form-control" placeholder="เบอร์โทรศัพท์">
        </div>
        <div class="form-group">           
            <input type="file" name="image" id="" class="form-control">
        </div><br>
        <div>
            <input type="submit" name="submit">
        </div><br><br><br><br><br><br>
    </form>
</div>
</div>


<style>
   h1{
    text-align: center;
    color: #e27d5f;
    text-transform: uppercase;
    word-spacing: 10px;
    font-family: 'Bitter', serif;
    margin-top: -50px;
    margin-bottom: 50px;
    text-shadow: -2px 2px 1px #e8a87c;  
  }
.bg{
    background-color: #87cbca;
}
  
  form{
    font-family: 'Bitter', serif;
  }
  input{
      padding: 10px;
      font-size: inherit;
  }
  input[type="text"]{
      display: block;
      margin-bottom: 25px;
      width: 100%;
      border: 2px solid steelblue;
  }
  input[type="email"]{
      display: block;
      margin-bottom: 25px;
      width: 100%;
      border: 2px solid steelblue;
  }
  input[type="password"]{
      display: block;
      margin-bottom: 25px;
      width: 100%;
      border: 2px solid steelblue;
  }
  input[type="location"]{
      display: block;
      margin-bottom: 25px;
      width: 100%;
      border: 2px solid steelblue;
  }
  input[type="callnumber"]{
      display: block;
      margin-bottom: 25px;
      width: 100%;
      border: 2px solid steelblue;
  }
  input[type="file"]{
      display: block;
      margin: auto;
      width: 100%;
      border: 2px solid steelblue;
  }
  input[type="submit"]{
    display: block;
      margin: auto;
      width: 100%;
      border: none;
      background: #e8a87c;
      color: white;
  }

</style>
<%-  include("partials/footer") %>