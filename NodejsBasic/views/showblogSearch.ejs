<%- include("partials/header") %>
        <br><br><br><br>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

 

  <!-- Page Content -->
  <div class="container">

    <div class="row">
  
      <!-- Blog Entries Column -->
      <div class="col-md-8">
        <%  if(post.length > 0){%>
            <h1 class="my-4">ค้นหา "<%= search%>"</h1>

        <% post.forEach(function(posts){ %>
        
         
        <div class="card md-4">
          <img class="card-img-top" src="<%= posts.image %>" alt="Card image cap" >
          <div class="card-body">
            <h2 class="card-title"><%= posts.title %></h2>
            <p class="card-text"><%- descText(posts.desc,400) %>
            </p>
            <a href="/blog/showblog/<%= posts._id %>" class="btn btn-primary">Read More &rarr;</a>
          </div>
          <div class="card-footer text-muted">
            โพสเวลา <%= moment(posts.date).format("DD-MM-YYYY")%> โดย
            <a href="/blog/post/show/?author=<%= posts.author%>"><%= posts.author %></a>, <a href="/blog/post/show/?catablog=<%= posts.catablog%>"><%= posts.catablog %></a>
          </div>
          <% }) %>
        </div>

        <!-- Blog Post -->

      
        <% } else { %>
            <h1>ไม่พบบทความ</h1>
        <% } %>
    </div>
    <%-include sideblog %>
</div>



  

    
<%-  include("partials/footer") %>